<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Grid Layout with 4 Sections -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="16dp">

        <!-- Fake Call -->
        <LinearLayout
            android:id="@+id/fake_call"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/oval_purple_full"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_fake_call"
                android:contentDescription="Fake Call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Call"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Safe Locations -->
        <LinearLayout
            android:id="@+id/nearest_safe_locations"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/oval_purple_full"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Safe Locations" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Locations"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Basic Laws -->
        <LinearLayout
            android:id="@+id/first"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/oval_purple_full"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/law_image"
                android:contentDescription="Basic Laws" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Laws"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Self Defense -->
        <LinearLayout
            android:id="@+id/second"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/oval_purple_full"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/self_defence"
                android:contentDescription="Self Defense" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Defense"
                android:textAlignment="center"/>
        </LinearLayout>

    </GridLayout>

    <!-- SOS Message Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_layout"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="SOS Will Be Sent To"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/selected_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="No contacts selected"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Select Contacts Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/select_contacts"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/textNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="Select Contacts"
        android:textColor="@color/black"
        app:cornerRadius="10dp"/>

    <!-- Alert Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_contacts"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/start_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Alert"
            android:onClick="startServiceV" />

        <Button
            android:id="@+id/stop_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Alert"
            android:onClick="stopService" />

    </LinearLayout>




</RelativeLayout>
